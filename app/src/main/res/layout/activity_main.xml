<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/MediaVolumeIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/MediaVolumeLabel"
        app:layout_constraintBottom_toTopOf="@id/MediaVolumeBar"
        android:src="@drawable/ic_music_note_black_24dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/MediaVolumeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volumen multimedia"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/MediaVolumeBar"
        app:layout_constraintLeft_toRightOf="@id/MediaVolumeIcon"
        app:layout_constraintRight_toLeftOf="@id/MediaVolumeBar"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        />
    <SeekBar
        android:id="@+id/MediaVolumeBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/MediaVolumeLabel"
        app:layout_constraintLeft_toRightOf="@id/MediaVolumeIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/AlarmVolumeIcon"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        />
    <ImageView
        android:id="@+id/AlarmVolumeIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_alarm_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/MediaVolumeBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/AlarmVolumeLabel"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/AlarmVolumeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volumen de alarma"
        app:layout_constraintTop_toBottomOf="@id/MediaVolumeBar"
        app:layout_constraintLeft_toRightOf="@id/AlarmVolumeIcon"
        app:layout_constraintRight_toLeftOf="@id/AlarmVolumeBar"
        app:layout_constraintBottom_toTopOf="@id/AlarmVolumeBar"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        />
    <SeekBar
        android:id="@+id/AlarmVolumeBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/AlarmVolumeLabel"
        app:layout_constraintLeft_toRightOf="@id/AlarmVolumeIcon"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        />
    <ImageView
        android:id="@+id/RingVolumeIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_vibration_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/AlarmVolumeBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/RingVolumeLabel"
        app:layout_constraintBottom_toTopOf="@id/RingVolumeBar"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/RingVolumeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volumen de llamada"
        app:layout_constraintTop_toBottomOf="@id/AlarmVolumeBar"
        app:layout_constraintLeft_toRightOf="@id/RingVolumeIcon"
        app:layout_constraintRight_toLeftOf="@id/RingVolumeBar"
        app:layout_constraintBottom_toTopOf="@id/RingVolumeBar"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        />
    <SeekBar
        android:id="@+id/RingVolumeBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/RingVolumeLabel"
        app:layout_constraintLeft_toRightOf="@id/RingVolumeIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/switch1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/CallSwitchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibrar tambien para llamadas"
        app:layout_constraintLeft_toRightOf="@id/RingVolumeIcon"
        app:layout_constraintTop_toBottomOf="@id/RingVolumeBar"
        app:layout_constraintBottom_toTopOf="@id/divider"
        android:layout_marginLeft="15dp"
        />
    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/RingVolumeBar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        />
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/switch1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/DoNotDisturbButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No molestar"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toTopOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:paddingVertical="30dp"
        android:paddingLeft="60dp"
        />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/DoNotDisturbButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/PhoneRingtonesBotton"
        />

    <TextView
        android:id="@+id/PhoneRingtonesBotton"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:text="Tonos de llamada"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/DefaultNotificationSoundButton"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:paddingVertical="30dp"
        android:paddingLeft="60dp"
        />

    <TextView
        android:id="@+id/DefaultNotificationSoundButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sónido de notificación por defecto"
        app:layout_constraintTop_toBottomOf="@id/PhoneRingtonesBotton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/DefaultAlarmSoundButton"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:paddingVertical="30dp"
        android:paddingLeft="60dp"
        />

    <TextView
        android:id="@+id/DefaultAlarmSoundButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sónido de alarma por defecto"
        app:layout_constraintTop_toBottomOf="@id/DefaultNotificationSoundButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider3"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:paddingVertical="30dp"
        android:paddingLeft="60dp"
        />
    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/DefaultAlarmSoundButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/OtherButton"
        />
    <TextView
        android:id="@+id/OtherButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Otros sonidos y vibraciones"
        app:layout_constraintTop_toBottomOf="@id/divider3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:paddingVertical="10dp"
        android:paddingLeft="60dp"
        android:textColor="@color/teal_700"
        />

</androidx.constraintlayout.widget.ConstraintLayout>